# Project Chimera Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=*

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Option 1: Full connection string (preferred)
POSTGRES_CONNECTION_STRING=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:${POSTGRES_HOST_PORT:-5433}/chimera_dev

# Option 2: Individual components
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chimera_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# External API Keys (Trend Research)
# ============================================
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

NEWS_API_KEY=your_news_api_key

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# ============================================
# External API Keys (Content Generation)
# ============================================
IDEOGRAM_API_KEY=your_ideogram_api_key
RUNWAY_API_KEY=your_runway_api_key

# ============================================
# External API Keys (Engagement)
# ============================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
TIKTOK_API_KEY=your_tiktok_api_key
THREADS_API_KEY=your_threads_api_key

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/chimera_factory.log

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Docker host port mappings (to avoid conflicts with local services)
# These are the ports exposed on your host machine
POSTGRES_HOST_PORT=5433
REDIS_HOST_PORT=6380

# ============================================
# External API Base URLs (Optional - defaults provided)
# ============================================
# Trend Research APIs
TWITTER_API_BASE_URL=https://api.twitter.com/2
NEWS_API_BASE_URL=https://newsapi.org/v2
REDDIT_API_BASE_URL=https://www.reddit.com
REDDIT_AUTH_URL=https://www.reddit.com/api/v1/access_token

# Engagement APIs
INSTAGRAM_API_BASE_URL=https://graph.instagram.com
TIKTOK_API_BASE_URL=https://open-api.tiktok.com

# Content Generation APIs
IDEOGRAM_API_BASE_URL=https://api.ideogram.ai/v1
RUNWAY_API_BASE_URL=https://api.runwayml.com/v1

# OpenClaw Network
OPENCLAW_NETWORK_URL=https://network.openclaw.io
OPENCLAW_USE_MCP=false
