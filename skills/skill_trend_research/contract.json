{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trend Research Skill Contract",
  "description": "Input/Output contract for skill_trend_research",
  "input": {
    "type": "object",
    "properties": {
      "topic": {
        "type": "string",
        "description": "Topic or keyword to research"
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["twitter", "news", "reddit"]
        },
        "description": "List of sources to query"
      },
      "timeframe": {
        "type": "string",
        "enum": ["1h", "24h", "7d", "30d"],
        "default": "24h",
        "description": "Time window for trend analysis"
      }
    },
    "required": ["topic", "sources"]
  },
  "output": {
    "type": "object",
    "properties": {
      "trends": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {"type": "string"},
            "source": {"type": "string"},
            "engagement": {"type": "number"},
            "timestamp": {"type": "string", "format": "date-time"}
          },
          "required": ["title", "source", "engagement", "timestamp"]
        }
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Confidence score for trend accuracy"
      }
    },
    "required": ["trends", "confidence"]
  }
}
